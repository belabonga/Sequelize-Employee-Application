<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Account </title>
        <link href="../static/css/styles.css" rel="stylesheet" />
        <link rel="icon" type="image/x-icon" href="../static/assets/img/favicon.png" />
        <script data-search-pseudo-elements defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.28.0/feather.min.js" crossorigin="anonymous"></script>
    </head>
    <body class="bg-white">
        <main>
            <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
                <div class="container-xl px-4">
                    <div class="page-header-content">
                        <div class="row align-items-center justify-content-between pt-3">
                            <div class="col-auto mb-3">
                                <h1 class="page-header-title">
                                    <div class="page-header-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg></div>
                                    Employee App
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main page content-->
            <div class="container-xl px-4 mt-4">
                <!-- Account page navigation-->

                <div class="row">
                    <div class="col-xl-4">
                        <!-- Profile picture card-->
                        <div class="card mb-4 mb-xl-0">
                            <div class="card-header">Employee Name Here</div>
                            <div class="card-body text-center">
                                <!-- Profile picture image-->
                                <img class="img-account-profile rounded-circle mb-2" src="../static/assets/img/illustrations/profiles/profile-1.png" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-8">
                        <!-- Account details card-->
                        <div class="card mb-4">
                            <div class="card-header">Account Details</div>
                            <div class="card-body">
                                <form action="/employees/edit/<%= data.id %>" method="post">
                                    <!-- Form Group (username)-->
                                    <div class="mb-3">
                                        <label class="small mb-1">Name</label>
                                        <input name="name" class="form-control" type="text" value="<%= data.name %>">
                                    </div>
                                    <!-- Form Row-->
                                    <div class="row gx-3 mb-3">
                                        <!-- Form Group (first name)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1">Position</label>
                                            <input name="position" class="form-control" type="text" value="<%= data.position %>">
                                        </div>

                                        <div class="col-md-6">
                                            <label class="small mb-1">Age</label>
                                            <input name="age" class="form-control" type="number" value="<%= data.age %>">
                                        </div>
                                    <br>
                                        <div class="mb-3">
                                            <label class="small mb-1">Education</label>
                                            <select name="education" class="form-select" aria-label="Default select example">
                                                <option disabled="">Select education:</option>
                                                <option value="Bachelor Degree" <%= data.education === "Bachelor Degree" ? 'selected' : '' %>>Bachelor Degree</option>
                                                <option value="Master Degree" <%= data.education === "Master Degree" ? 'selected' : '' %>>Master Degree</option>
                                            </select>
                                        </div>
                                        
                                    <!-- Form Row -->
                                    <div class="row gx-3 mb-3">
                                        <!-- Form Group (organization name)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1">Email Address</label>
                                            <input name="email" class="form-control" type="text" value="<%= data.email %>">
                                        </div>
                                        <!-- Form Group (location)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" >Phone Number</label>
                                            <input name="phone_number" class="form-control" type="text" value="<%= data.phone_number %>">
                                        </div>
                                    </div>
                                    <!-- Form Group (email address)-->
                                    <div class="mb-3">
                                        <label class="small mb-1">Profile Picture</label>
                                        <input name="profile_picture" class="form-control" type="text" value="<%= data.profile_picture %>">
                                    </div>
                                    
                                    
                                    <!-- Save changes button-->
                                    <button class="btn btn-primary" type="submit" href="/">Save changes</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="../static/js/scripts.js"></script>
    </body>
</html>
